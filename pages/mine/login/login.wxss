/* pages/mine/login/login.wxss */

.content{
  width: 100vw;
  height: 100vh;
  /* background: url('/asset/img/bg.png') repeat-x; */
  position: relative;
  box-sizing: border-box;
}
.content image, .content .form{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
}
.content .form{
    display: flex;  
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.content .form form{
    background: white;
    padding: 60rpx;
    border-radius: 5px;
}
.content form .section{
    display: flex;
    padding: 30rpx 0;
    align-items: center;
    border-bottom: 1px solid #ddd;
    position: relative;
}
.content form .section .code{
    background:#ff9157;
    border: 2rpx solid #ff9157;
    color: white;
    padding: 10rpx;
    white-space:nowrap;
    box-sizing: border-box;
}
.btn-area{
    margin-top: 40rpx;
    margin-bottom: 40rpx;
}